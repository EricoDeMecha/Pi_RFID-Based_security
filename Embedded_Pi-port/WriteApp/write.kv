<Writer>:
    orientation: 'vertical'
    Bios:
        id: bios
    Button:
        id: writeBtn
        text: 'Write'
        size_hint: 1,None
        height: root.height/9
        on_press: root.collectData()
    Label:
        id: writeLbl
        markup: True
        text: '[color=FF5733][b]place your card/key to write[/b][/color]'
        size_hint: 1,None
        height: root.height/27
    ProgressBar:
        id: pb
        max: 100
        size_hint: 1,None
        height: root.height/27
    Status:
        id: status
        size_hint: 1,None
        height: root.height/9