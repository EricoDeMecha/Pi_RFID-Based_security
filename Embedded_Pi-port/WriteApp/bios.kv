#:import Bios Bios
<Bios>:
    reg: _reg
    serial_no: _serial_no
    phone_no: _phone_no
    cardData: _cardData
    keyData: _keyData

    cols: 2
    Label:
        font_size: root.height/10
        text: "Reg. No.: "
    TextInput:
        id: _reg
        focus: True
        multiline: False
        on_focus: root.validate_reg(self.text)
    Label:
        font_size: root.height/10
        text: "Serial No.: "
    TextInput:
        id: _serial_no
        focus: True
        multiline: False
        on_focus: root.validate_serial(self.text)
    Label:
        font_size: root.height/10
        text: "Phone No.: "
    TextInput:
        id: _phone_no
        hint_text: 'e.g +254700000000'
        focus: True
        multiline: False
        on_focus: root.validate_phone(self.text)
    Label:
        font_size: root.height/10
        text: "Key Data: "
    TextInput:
        id: _keyData
        focus: True
        multiline: False
        on_focus: root.validate_key(self.text)
    Label:
        font_size: root.height/10
        text: "Card Data: "
    TextInput:
        id: _cardData
        focus: True
        multiline: False
        on_focus: root.validate_card(self.text)